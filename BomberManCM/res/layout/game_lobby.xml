<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Menu" >

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Game Lobby"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/Title" />

    <TextView
        android:id="@+id/waitingP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playersTV"
        android:layout_below="@+id/playersTV"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Waiting for player 1"
        android:textSize="@dimen/Wait" />

    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Start Game!" 
        android:onClick="playerReady"/>

    <TextView
        android:id="@+id/waitingP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/waitingP1"
        android:layout_below="@+id/waitingP1"
        android:layout_marginTop="40dp"
        android:text="Waiting for player 2"
        android:textSize="@dimen/Wait" />

    <TextView
        android:id="@+id/waitingP3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/waitingP2"
        android:layout_below="@+id/waitingP2"
        android:layout_marginTop="40dp"
        android:text="Waiting for player 3"
        android:textSize="@dimen/Wait" />

    <TextView
        android:id="@+id/playersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Title"
        android:layout_marginTop="39dp"
        android:layout_marginLeft="12dp"
        android:text="Waiting for players:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/Player" />

</RelativeLayout>