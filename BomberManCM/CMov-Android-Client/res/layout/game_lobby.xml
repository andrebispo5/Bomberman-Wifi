<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Menu" >

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Game Lobby"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/Title" />

    <TextView
        android:id="@+id/player2TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player1TV"
        android:layout_below="@+id/player1TV"
        android:layout_marginTop="125dp"
        android:text="Player 2:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/Player" />

    <TextView
        android:id="@+id/player1TV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Title"
        android:layout_marginLeft="47dp"
        android:layout_marginTop="87dp"
        android:text="Player1:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="@dimen/Player" />

    <TextView
        android:id="@+id/waitingP1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player1TV"
        android:layout_below="@+id/player1TV"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:text="Waiting for player 1"
        android:textSize="@dimen/Wait" />

    <TextView
        android:id="@+id/waitingP2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/player2TV"
        android:layout_below="@+id/player2TV"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:text="Waiting for player 2"
        android:textSize="@dimen/Wait" />



</RelativeLayout>